    int arr[]={1,2,3,4,5};
    // printArray(arr,0,n);
    
    //cout<<sum(arr,0,n);
    
    // int sum = 0;
    
    // sumofNumber(arr,0,n,sum);
    
    // cout<<sum;
    
    int ans = maxOfNumber(arr,0,n);
    cout<<ans;
    

    return 0;
}
