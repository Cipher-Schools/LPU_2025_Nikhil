// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
   
   int n = 5;
   
   int arr[n] ={5,4,3,2,1};
   
   cout<<"Initial Array is : ";
    for(int i =0;i<n;i++)cout<<arr[i]<<" ";
    
    
    for(int i = 0;i<n;i++){
        int min_idx = i;
        for(int j = i+1;j<n;j++){
            if(arr[j]<arr[min_idx]){
                min_idx = j;
            }
            
        }
        swap(arr[i],arr[min_idx]);
    }
   

   cout<<endl;
   cout<<"Sorted Array is : ";
   for(int i =0;i<n;i++)cout<<arr[i]<<" ";

    return 0;
}
