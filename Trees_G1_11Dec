void printRootToLeaf(Node* root,List<int>&nums){
    if(!root)return ;
    nums.add(root->data);
    if(root->left==nullptr && root->right ==nullptr){
        for(auto& x : nums)cout<<x<<" ";
    }
    printRootToLeaf(root->left,nums);
    printRootToLeaf(root->right,nums);
    nums.remove();
}

// bool checkIfBalanced()




int main() {
    
    Node* root = new Node(1);
    Node* leftNode = new Node(2);
    Node* rightNode = new Node(3);
    
    root->left = leftNode ;
    root->right = rightNode;
    
    Node* left1 = new Node(4);
    leftNode->left = left1;
    Node* right1 = new Node(5);
    leftNode->right = right1;
    

    //vector<int>arr(10,-1);
    int maxLevel = -1;
    printLeftViewByDFS(root,0,maxLevel);
  

    

    return 0;
}
