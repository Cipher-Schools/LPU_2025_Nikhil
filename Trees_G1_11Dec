void printLeftViewByDFS(Node* root,int level,int &maxLevel){
    
    if(!root)return ;
    
    if(level>maxLevel){
        cout<<root->data<<" ";
        maxLevel++;
    }
    
    printLeftViewByDFS(root->left,level+1,maxLevel);
    printLeftViewByDFS(root->right,level+1,maxLevel);
    
}

void printrightViewByDFS(Node* root,int level,int &maxLevel){
    
    if(!root)return ;
    
    if(level>maxLevel){
        cout<<root->data<<" ";
        maxLevel++;
    }
    
    printLeftViewByDFS(root->right,level+1,maxLevel);
    printLeftViewByDFS(root->left,level+1,maxLevel);
    
}

void printRootToLeaf(Node* root,vector<int>&nums){
    if(!root)return ;
    nums.push_back(root->data);
    if(root->left==nullptr && root->right ==nullptr){
        for(auto& x : nums)cout<<x<<" ";
    }
    printRootToLeaf(root->left,nums);
    printRootToLeaf(root->right,nums);
    nums.pop_back();
}

// STL - JCF


