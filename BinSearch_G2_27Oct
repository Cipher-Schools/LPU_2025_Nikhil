// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
   
    int n = 8;
    int arr[n]= {3,4,5,6,7,8,1,2};
    int target = 1;
    
    int l = 0,r = n-1;
    
    while(l<=r){
        int m = (l+r)/2;
        
        if(arr[m]==target){
            cout<<m;
            break;
        }
        
        if(arr[m]<=arr[r]){
            
            if(target>= arr[m] && target<=arr[r]){
                l = m+1;
            }
            else r= m-1;
            
        }
        else{
            
            if(target>=arr[l] && target <= arr[m]){
                r =m-1;
            }
            else l =m+1;
            
        }
        
    }
   

    return 0;
}
