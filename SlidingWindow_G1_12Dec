// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;



int main() {

        
    vector<int>nums = {3,4,1,5,2,7,6,1,3};
    
    int n = nums.size();
    
    int maxSum = 0,sum= 0;
    int k = 3;
    
    // for(int i = 0;i<n;i++){
    //     int subArraySum = 0;
        
    //     for(int j = i ;j<(i+k) && j<n ;j++){
    //         subArraySum+=nums[j];
    //     }
        
    //     maxSum = max(subArraySum,maxSum);
        
    // }
    
    int i = 0,j = 0;
    
    
    while(j<n){
        sum+=nums[j];
        
       int window_len = j-i+1;
        if(window_len>k){
            sum-=nums[i];
            i++;
            window_len--;
        }
      
        if(window_len == k){
            maxSum = max(maxSum , sum);
        }
        j++;
    }
    
    
    cout<<maxSum;
    
    

    return 0;
}
