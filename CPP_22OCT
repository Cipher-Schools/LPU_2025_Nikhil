#include <bits/stdc++.h>

using namespace std;

int i = 0;

int add(int x,int y){
    return x+y;
}

int add(int x,int y,int z){
    return x+y+z;
}

void multiply(int a , int b ,int c){
    cout<<a*b*c<<endl;
}


void multiply(int a , int b) {
    cout<<a*b<<endl;
}

void helper(int *a){
     *a = *a+10;
     cout<<"Inside helper "<<*a<<" "<<endl;
}

 void  printNumber(int number ,int n){
     
     if(number > n){
         return ;
     }
     
     cout<<number<<" ";
     number++;
     printNumber(number,n);
     
 }
 
 
  void  printNumberInDecreasingOrder(int n){
     
     if(n >=5){
         return ;
     }
     
     
     printNumberInDecreasingOrder(n);
    
     cout<<n<<" ";
       n++;

     
 }

