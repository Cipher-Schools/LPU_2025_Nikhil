        // cout<<pq.top();

        priority_queue<int,vector<int>,greater<int>> pq;  // Min Heap

        for(auto & x: vec)pq.push(x);

        int cost = 0;

        while(pq.size()>1){
            int rope1 = pq.top();
            pq.pop();

            int rope2 = pq.top();
            pq.pop();

            cost += (rope1+rope2);

            pq.push(rope1 + rope2);
        }

        cout<<pq.top();



}




