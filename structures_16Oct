struct Animal{
    // public :
    int age ;
    string name;
    
    void display(){
        cout<<"Name is : "<<name<< " and Age is : "<<age<<endl;
    }
    
};

int main() {
    
    Animal a;
    a.age= 22;
    a.name = "Horse";
    
    a.display();
  
    
    
    return -1;
  
}
