void dijkstra(   vector<vector<pair<int,int>>>&adjList,int src,int v,vector<int>&dis){
   queue<pair<int,int>>pq;
    
    pq.push({0,src});
    dis[src]=0;
    
    while(!pq.empty()){
        int d = pq.front().first;
        int node = pq.front().second;
        
        pq.pop();
        
        for(auto& nghbrs : adjList[node]){
            int adjNode = nghbrs.first;
            int cost = nghbrs.second ;
            
            if(d + cost < dis[adjNode]){
                dis[adjNode] = d + cost;
                pq.push({d+cost, adjNode});
            }
        }
    }
}

int main() {
    int v = 3;
    
    vector<pair<int,pair<int,int>>>edges{{0,{1,10}},{0,{2,3}},{1,{2,4}}};
    
    vector<vector<pair<int,int>>>adjList(v);
    
    for(auto& it : edges){
        int u = it.first;
        int v = it.second.first;
        int wt  = it.second.second;
        
        adjList[u].push_back({v,wt});
        adjList[v].push_back({u,wt});
    }
    int src = 0;
    
    vector<int>dis(v,INT_MAX);
    
    dijkstra(adjList,src,v,dis);
    
    for(auto& x : dis){
        cout<<x<<" ";
    }
    
    return 0;
}
