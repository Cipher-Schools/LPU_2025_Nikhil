// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;


void DFS(int node ,  vector<vector<int>>&adjList, vector<bool>&visited){
    visited[node]=true;
    cout<<node<<" ";
    
    for(auto& x : adjList[node]){
        
             if(visited[x]==false) {
              DFS(x,adjList,visited);
        
       
        }
      
    // }
    // int v = adjMatrix[0].size();
    // for(int i = 0;i<=v;i++){
    //     if(adjMatrix[node][i]==1 &&visited[i]==false){
    //         DFS(i,adjMatrix,visited);
    //     }
    // }
    
}
}
void BFS(int root , vector<vector<int>>&adjList,vector<bool>&visited)
{
    queue<int>q ; 
    q.push(root);
    
    while(!q.empty()){
        int node = q.front();
        q.pop();
        visited[node] = true;
        
        cout<<node<<" ";
        
        for(auto& neighbours : adjList[node]){
            if(visited[neighbours]==false){
                q.push(neighbours);
            }
        }
    }
}




int main() {
 int v = 6;
 
//  vector<vector<int>>vec  = {{1,2},{1,3},{1,4},{1,0},{3,5},{3,6}};
 
 vector<pair<int,int>>connections = {{1,2},{1,3},{1,4},{1,0},{3,5},{3,6}};
 
 
 //Adj Matrix
    vector<vector<int>>adjMatrix(v+1,vector<int>(v+1,0));
    
    for(auto& x : connections){
        int u = x.first;
        int v = x.second;
        // int u == x[0];
        // int v == x[1];
        adjMatrix[u][v]=1;
        adjMatrix[v][u]=1;
    }
    
    // 2. Adj List
    vector<vector<int>>adjList(v+1);
    for(auto& x: connections){
        int u = x.first;
        int v = x.second;
        
        adjList[u].push_back(v);
        adjList[v].push_back(u);
    }
    vector<bool>visited(v+1,false);
    vector<bool>visited2(v+1,false);

    DFS(1,adjList,visited);
    cout<<endl;
    BFS(1,adjList,visited2);
    return 0;
}
