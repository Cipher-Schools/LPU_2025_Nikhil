class  Student{
    public : 
        int age ;
        string name;
        //string  scholarship;
        bool scholarship;
        
        Student(){
            
        }
        
         Student(string nm){
             
             name = nm;
            
        }
        
        Student(int a , string FullName,bool schl){
          age = a;
          name = FullName ;
          scholarship = schl;
        }
        
        ~Student(){
            cout<<"Destructor called"<<endl;
        }
        
        void getName(){
            cout<<"My Name is :" <<name<<endl;
        }
        
};

int main(){

